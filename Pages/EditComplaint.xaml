<Page x:Class="PPPP.Pages.EditComplaint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование жалобы">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10" 
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <TextBlock Text="Редактирование данных жалобы" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Order (ComboBox) -->
            <TextBlock Text="Заказ" Margin="5"/>
            <ComboBox x:Name="cmbOrder" 
                      DisplayMemberPath="ID_Order" 
                      Margin="5"/>

            <!-- Registration Date (DatePicker) -->
            <TextBlock Text="Дата регистрации" Margin="5"/>
            <DatePicker x:Name="dpRegistrationDate" 
                       Margin="5"/>

            <!-- Issue Description (TextBox) -->
            <TextBlock Text="Описание проблемы" Margin="5"/>
            <TextBox x:Name="txtIssueDescription" 
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="5"/>

            <!-- Status (ComboBox) -->
            <TextBlock Text="Статус" Margin="5"/>
            <ComboBox x:Name="cmbStatus" 
                      Margin="5">
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В обработке"/>
                <ComboBoxItem Content="Решена"/>
                <ComboBoxItem Content="Отклонена"/>
            </ComboBox>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 