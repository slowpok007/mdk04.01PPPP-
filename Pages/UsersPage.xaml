<Page x:Class="PPPP.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница входа">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" 
                    Width="300" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Вход в систему" 
                       FontSize="24" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" Margin="0,5"/>
            <ComboBox x:Name="cmbLogin" 
                      Height="30" 
                      Margin="0,5,0,10"
                      DisplayMemberPath="Login"
                      SelectionChanged="cmbLogin_SelectionChanged"/>

            <TextBlock Text="Пароль:" Margin="0,5"/>
            <PasswordBox x:Name="txtPassword" 
                        Height="30" 
                        Margin="0,5,0,10"/>

            <TextBlock Text="Роль:" Margin="0,5"/>
            <ComboBox x:Name="cmbRole" 
                      Height="30" 
                      Margin="0,5,0,20"
                      DisplayMemberPath="Role"
                      IsEnabled="False"/>

            <Button x:Name="btnLogin" 
                    Content="Войти" 
                    Height="40" 
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
