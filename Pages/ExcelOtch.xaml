<Page x:Class="PPPP.Pages.ExcelOtch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Экспорт в Excel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Выберите таблицы для экспорта:" 
                      FontSize="16" 
                      Margin="0,0,0,10"/>

            <CheckBox x:Name="chkAllTables" 
                     Content="Выбрать все таблицы" 
                     Margin="0,0,0,10"
                     Checked="chkAllTables_Checked"
                     Unchecked="chkAllTables_Unchecked"/>

            <StackPanel Margin="20,0,0,10">
                <CheckBox x:Name="chkEquipment" 
                         Content="Оборудование" 
                         Margin="0,5"/>
                <CheckBox x:Name="chkOrders" 
                         Content="Заказы" 
                         Margin="0,5"/>
                <CheckBox x:Name="chkServiceRequests" 
                         Content="Заявки на обслуживание" 
                         Margin="0,5"/>
                <CheckBox x:Name="chkComplaints" 
                         Content="Жалобы" 
                         Margin="0,5"/>
            </StackPanel>

            <Button x:Name="btnExport" 
                    Content="Экспорт в Excel" 
                    Width="150" 
                    Height="30" 
                    Margin="0,20,0,0"
                    Click="btnExport_Click"/>
        </StackPanel>
    </Grid>
</Page>
