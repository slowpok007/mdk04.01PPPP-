<Page x:Class="PPPP.Pages.IzmUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Управление пользователями">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Кнопка добавления -->
            <Button x:Name="btnAddUser" 
                    Content="Добавить пользователя" 
                    Width="200" 
                    Height="30" 
                    Margin="5"
                    HorizontalAlignment="Left"
                    Click="btnAddUser_Click"/>

            <!-- Таблица пользователей -->
            <DataGrid x:Name="dgUsers" 
                      Grid.Row="1"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID_user}" Width="50"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*"/>
                    <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="*"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*"/>
                    <DataGridTemplateColumn Header="Действия" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Изменить" 
                                            Click="btnEditUser_Click"
                                            Margin="2"
                                            Width="90"/>
                                    <Button Content="Удалить" 
                                            Click="btnDeleteUser_Click"
                                            Margin="2"
                                            Width="90"
                                            Background="#FFFF0000"
                                            Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
