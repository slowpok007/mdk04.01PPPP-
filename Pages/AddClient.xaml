<Page x:Class="PPPP.Pages.AddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление клиента">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад -->

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            
            <TextBlock Text="Добавление нового клиента" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Название компании" Margin="5"/>
            <TextBox x:Name="txtCompanyName" 
                     Text="БОРКОТЛОМАШ" 
                     IsReadOnly="True" 
                     Margin="5"/>

            <TextBlock Text="Контактное лицо" Margin="5"/>
            <TextBox x:Name="txtContactPerson" Margin="5"/>

            <TextBlock Text="Телефон" Margin="5"/>
            <TextBox x:Name="txtPhone" Margin="5"/>

            <TextBlock Text="Email" Margin="5"/>
            <TextBox x:Name="txtEmail" Margin="5"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>
                
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
