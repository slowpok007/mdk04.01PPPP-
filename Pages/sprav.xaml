<Page x:Class="PPPP.Pages.sprav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Справочники"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <TabControl Grid.Row="1" Margin="10">
            <!-- Вкладка Клиенты -->
            <TabItem Header="Клиенты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnAddClient" 
                            Content="Добавить клиента" 
                            Width="150" 
                            Height="30" 
                            Margin="5"
                            HorizontalAlignment="Left"
                            Click="btnAddClient_Click"/>

                    <DataGrid x:Name="dgClients" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_Client}" Width="50"/>
                            <DataGridTextColumn Header="Название компании" Binding="{Binding CompanyName}" Width="*"/>
                            <DataGridTextColumn Header="Контактное лицо" Binding="{Binding ContactPerson}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="btnEditClient_Click"
                                                    Margin="2"/>
                                            <Button Content="Удалить"
                                                    Click="btnDeleteClient_Click"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка Оборудование -->
            <TabItem Header="Оборудование">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnAddEquipment" 
                            Content="Добавить оборудование" 
                            Width="200" 
                            Height="30" 
                            Margin="5"
                            HorizontalAlignment="Left"
                            Click="btnAddEquipment_Click"/>

                    <DataGrid x:Name="dgEquipment" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_Equipment}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding EquipmentName}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="btnEditEquipment_Click"
                                                    Margin="2"/>
                                            <Button Content="Удалить"
                                                    Click="btnDeleteEquipment_Click"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка Заказы -->
            <TabItem Header="Заказы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnAddOrder" 
                            Content="Добавить заказ" 
                            Width="150" 
                            Height="30" 
                            Margin="5"
                            HorizontalAlignment="Left"
                            Click="btnAddOrder_Click"/>

                    <DataGrid x:Name="dgOrders" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_Order}" Width="50"/>
                            <DataGridTextColumn Header="ID Клиента" Binding="{Binding ID_Client}" Width="100"/>
                            <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" Width="*"/>
                            <DataGridTextColumn Header="Срок" Binding="{Binding Deadline}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="btnEditOrder_Click"
                                                    Margin="2"/>
                                            <Button Content="Удалить"
                                                    Click="btnDeleteOrder_Click"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка Заявки на обслуживание -->
            <TabItem Header="Заявки на обслуживание">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnAddServiceRequest" 
                            Content="Добавить заявку" 
                            Width="150" 
                            Height="30" 
                            Margin="5"
                            HorizontalAlignment="Left"
                            Click="btnAddServiceRequest_Click"/>

                    <DataGrid x:Name="dgServiceRequests" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_ServiceRequest}" Width="50"/>
                            <DataGridTextColumn Header="ID Оборудования" Binding="{Binding ID_Equipment}" Width="100"/>
                            <DataGridTextColumn Header="Тип услуги" Binding="{Binding ServiceType}" Width="*"/>
                            <DataGridTextColumn Header="Дата вызова" Binding="{Binding CallDate}" Width="*"/>
                            <DataGridTextColumn Header="Исполнитель" Binding="{Binding Executor}" Width="*"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="btnEditServiceRequest_Click"
                                                    Margin="2"/>
                                            <Button Content="Удалить"
                                                    Click="btnDeleteServiceRequest_Click"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка Жалобы -->
            <TabItem Header="Жалобы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button x:Name="btnAddComplaint" 
                            Content="Добавить жалобу" 
                            Width="150" 
                            Height="30" 
                            Margin="5"
                            HorizontalAlignment="Left"
                            Click="btnAddComplaint_Click"/>

                    <DataGrid x:Name="dgComplaints" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID_Complaint}" Width="50"/>
                            <DataGridTextColumn Header="ID Заказа" Binding="{Binding ID_Order}" Width="100"/>
                            <DataGridTextColumn Header="Описание проблемы" Binding="{Binding IssueDescription}" Width="*"/>
                            <DataGridTextColumn Header="Дата регистрации" Binding="{Binding RegistrationDate}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Изменить" 
                                                    Click="btnEditComplaint_Click"
                                                    Margin="2"/>
                                            <Button Content="Удалить"
                                                    Click="btnDeleteComplaint_Click"
                                                    Margin="2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
