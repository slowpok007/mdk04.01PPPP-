<Page x:Class="PPPP.Pages.EditClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование клиента">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10" 
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <TextBlock Text="Редактирование данных клиента" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Company Name (Read-only) -->
            <TextBlock Text="Название компании" Margin="5"/>
            <TextBox x:Name="txtCompanyName" Margin="5" IsReadOnly="True" Text="БОРКОТЛОМАШ"/>

            <!-- Contact Person -->
            <TextBlock Text="Контактное лицо" Margin="5"/>
            <TextBox x:Name="txtContactPerson" Margin="5"/>

            <!-- Phone -->
            <TextBlock Text="Телефон" Margin="5"/>
            <TextBox x:Name="txtPhone" Margin="5"/>

            <!-- Email -->
            <TextBlock Text="Email" Margin="5"/>
            <TextBox x:Name="txtEmail" Margin="5"/>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 