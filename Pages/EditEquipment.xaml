<Page x:Class="PPPP.Pages.EditEquipment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование оборудования">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10" 
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <TextBlock Text="Редактирование данных оборудования" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Equipment Name -->
            <TextBlock Text="Название оборудования" Margin="5"/>
            <TextBox x:Name="txtEquipmentName" Margin="5"/>

            <!-- Description -->
            <TextBlock Text="Описание" Margin="5"/>
            <TextBox x:Name="txtDescription" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     Height="60" 
                     Margin="5"/>

            <!-- Quantity -->
            <TextBlock Text="Количество" Margin="5"/>
            <TextBox x:Name="txtQuantity" Margin="5"/>

            <!-- Price -->
            <TextBlock Text="Цена" Margin="5"/>
            <TextBox x:Name="txtPrice" Margin="5"/>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 