<Page x:Class="PPPP.Pages.AddComplaint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление жалобы">

    <!-- Небольшое изменение для перегенерации -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            
            <TextBlock Text="Добавление новой жалобы" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Заказ" Margin="5"/>
            <ComboBox x:Name="cmbEquipment" 
                      DisplayMemberPath="ID_Order"
                      Margin="5"/>

            <TextBlock Text="Дата жалобы" Margin="5"/>
            <DatePicker x:Name="dpComplaintDate" 
                       Margin="5"/>

            <TextBlock Text="Описание проблемы" Margin="5"/>
            <TextBox x:Name="txtDescription" 
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="5"/>

            <TextBlock Text="Статус" Margin="5"/>
            <ComboBox x:Name="cmbStatus" 
                      Margin="5">
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В обработке"/>
                <ComboBoxItem Content="Решена"/>
                <ComboBoxItem Content="Отклонена"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>
                
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
