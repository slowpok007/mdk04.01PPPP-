<Page x:Class="PPPP.Pages.EditOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PPPP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Редактирование заказа">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button x:Name="btnBack" 
                Content="Назад" 
                Width="100" 
                Height="30" 
                Margin="10" 
                HorizontalAlignment="Left"
                Click="btnBack_Click"/>

        <StackPanel Grid.Row="1" 
                    Width="400" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <TextBlock Text="Редактирование данных заказа" 
                       FontSize="20" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Client (ComboBox) -->
            <TextBlock Text="Клиент" Margin="5"/>
            <ComboBox x:Name="cmbClient" 
                      DisplayMemberPath="ContactPerson" 
                      Margin="5"/>

            <!-- Order Date (DatePicker) -->
            <TextBlock Text="Дата заказа" Margin="5"/>
            <DatePicker x:Name="dpOrderDate" 
                       Margin="5"/>

            <!-- Deadline (DatePicker) -->
            <TextBlock Text="Срок выполнения" Margin="5"/>
            <DatePicker x:Name="dpDeadline" 
                       Margin="5"/>

            <!-- Status (ComboBox) -->
            <TextBlock Text="Статус" Margin="5"/>
            <ComboBox x:Name="cmbStatus" 
                      Margin="5">
                <ComboBoxItem Content="Новый"/>
                <ComboBoxItem Content="В процессе"/>
                <ComboBoxItem Content="Выполнен"/>
                <ComboBoxItem Content="Отменен"/>
            </ComboBox>

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,0">
                <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnSave_Click"/>

                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Width="150" 
                        Height="30" 
                        Margin="5"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page> 